<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/api*</pattern>
    </excludes>

    <!-- apply Sitemesh default template -->
    <decorator name="admin" page="admin.jsp">
        <pattern>/admin*</pattern>
    </decorator>
    <decorator name="signup" page="signup.jsp">
        <pattern>/signup*</pattern>
    </decorator>
    <decorator name="signin" page="signin.jsp">
        <pattern>/signin*</pattern>
    </decorator>
    <decorator name="web" page="web/profile.jsp">
        <pattern>/profile*</pattern>
    </decorator>
	<decorator name="home" page="web/home.jsp">
        <pattern>/home*</pattern>
    </decorator>
</decorators>